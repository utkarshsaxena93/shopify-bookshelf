<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= render 'shared/errors', obj: @book %>

<%= form_for @book, :html => { :class => "form-horizontal book", role: "form" } do |f| %>
<div class="row custom-well">
  <div class="form-group form-group-location">
    <%= label_tag 'Where can people find this book?', nil, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :location, class: 'form-control', required: true, placeholder: "Example. 9th Floor - User Experience Pod or 8th Floor Bookshelf" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary'%>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>
</div>
<% end %>
