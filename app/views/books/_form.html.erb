<%= render 'shared/errors', obj: @book %>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @book, :html => { :class => "form-horizontal book", role: "form" } do |f| %>

      <div class="form-group form-group-isbn">
        <%= label_tag 'ISBN', nil, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= number_field_tag 'ISBN', nil, :class => 'form-control query-isbn', placeholder: "Search by ISBN"%>
        </div>
      </div>
      <div class="form-group form-group-title">
        <%= label_tag 'Title', nil, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= text_field_tag 'Title', nil, :class => 'form-control query-title', placeholder: "Search by title" %>
        </div>
      </div>
      <%= f.hidden_field :isbn, bind: "isbn" %>
      <%= f.hidden_field :title, bind: "title" %>
      <%= f.hidden_field :googleid, bind: "id" %>
      <%= f.hidden_field :category, bind: "categories" %>
      <%= f.hidden_field :apiLink, bind: "selfLink" %>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit nil, :class => 'btn btn-primary submit-btn', disabled: true %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    books_path, :class => 'btn btn-default' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
