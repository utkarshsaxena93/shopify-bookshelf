<%- model_class = Book -%>

<% content_for :head do %>
  <%= stylesheet_link_tag "books", :media => "all" %>
<% end %>

<div id="book" class="custom-well book-container" data-googleurl="https://www.googleapis.com/books/v1/volumes/<%= @book.googleid %>">
  <div class="row">
    <div class="col-lg-12">
      <div class="notifications-<%= @book.id %>">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <a href="#" target="_blank" class="book__linktag">
        <h3 class="book__title"><%= @book.title %></h3>
        <% if @book.recommendation.any? %>
          <span class="label label-default recommended-label"><i class="fa fa-star" aria-hidden="true"></i> Recommended</span>
        <% end %>
      </a>
    </div>
    <div class="col-lg-3">
      <% if !@book.recommendation.map{|elem| elem.user_id}.include?(current_user.id) %>
      <button type="button" class="btn btn-success btn-small btn-recommendation book-<%= @book.id %>__addRecommendation" data-bookid="<%= @book.id %>" data-target="#modal">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Add a recommendation
      </button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">
      <img src="" class="book__image" >
    </div>
    <div class="col-lg-10 book-info">
      <h5>Publisher: <span class="book__publisher"></span></h5>
      <h5>Published Date: <span class="book__publishedDate"></span></h5>
      <h5>Category: <span><%= @book.category %></span></h5>
      <h5>Written by: <span class="book__authors"></span></h5>
      <h5>ISBN: <span><%= @book.isbn %></span></h5>
      <h5>Average Rating (from <span class="book__totalRatings"></span> ratings): <span class="book__avgRating"></span><h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <p class="book__description"></p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h5 class="">Added by: <a href="/users/<%= @book.user.id %>"><span class="book__addedby"><%= @book.user.name %></span></a></h5>
    </div>
  </div>

  <% if @book.recommendation.any? %>
    <div class="row">
      <div class="col-lg-12">
        <h4>Recommendations:</h4>
        <ul class="list-group">
          <% @book.recommendation.order('id DESC').each do |post| %>
          <li class="list-group-item">
            <p class="recommendation__text">
              "<%= post.user_recommendation %>"
            </p>
            <% @owner = User.find(post.user_id) %>
            <h5 class="recommendation__user">- <%= link_to @owner.name, user_path(post.user_id) %> - <%= @owner.position %> </h5>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <% if current_user == @book.user %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      books_path, :class => 'btn btn-default'  %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_path(@book),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'recommendationmodal' %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'showBook' %>
<% end %>
