<h5 class="table__heading">Your recommendations:</h5>
<table class="table table-striped currentlyReadingList">
  <thead>
    <tr>
      <th class="table__subheading">Book Title</th>
      <th class="table__subheading">Recommendation</th>
      <% if @user.id == current_user.id %>
        <th class="table__subheading">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |recommendation| %>
      <% @book = Book.find(recommendation.book_id) %>
      <tr>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td>"<%= recommendation.user_recommendation %>"</td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Delete', delete_recommendation_path(id: recommendation.id), :method => :delete,
             :data => { :confirm => "Are you sure?"},
             :class => "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
