<h1>View all users page.</h1>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-6 col-lg-4" data-userid="<%= user.id %>">
      <div class="thumbnail">
        <img src="https://www.gravatar.com/avatar/<%= user.gravitarhash %>?d=retro" alt="...">
        <div class="caption">
          <h3><%= user.email %></h3>
          <p>
             Currently reading: <%= if user.books_readings[0] then user.books_readings[0].title else "None" end %>
          </p>
          <p>
             Number of book(s) read: <%= user.books_reads.count %>
          </p>
          <p>
             Books on WishList: <%= user.books_wishlists.count %>
          </p>
          <p>
            <%= link_to 'View Profile', user_path(user), :class => 'btn btn-primary' %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
