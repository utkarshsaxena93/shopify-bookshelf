<% content_for :head do %>
  <title>ShopifyBookshelf</title>
  <%= stylesheet_link_tag    'homepage', media: 'all' %>
<% end %>

<% if current_user %>
  <div class="row">
    <div class="col-lg-8">
      <div class="col-lg-12">
        <div class="custom-well statusbox">
          <h2 class="statusbox__pageheading">Welcome <span class="capitalize-text"><%= current_user.name.split[0] %></span> to <span class="capitalize-text green-text">Shopify's Bookshelf</span></h2>
          <h4 class="statusbox__subheading">Share your favorite quote!</h4>
          <%= render 'form' %>
        </div>

      </div>
      <div class="col-lg-12">
        <%= render 'shared/activities' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="custom-well">
        <% @stories.each do |story| %>
          <div class="story">
            <h4 class="story__heading"><%= link_to story.title, story_path(story) %></h4>

            <p class="story__content">"<%= truncate(story.body, length: 350) %>"</p>

            <p class="story__addedBy">
              Added by: <%= story.user.name %>
            </p>
            <% if current_user %>
              <p class="story__buttons">
                <span class="badge story__buttons__likecount"><%= pluralize(story.likes.count, 'like') %></span>
                <%= link_to content_tag(:span, '', class: 'fa fa-thumbs-o-up') + ' Like it',
                             like_story_path(story), class: 'story__buttons__likebtn',
                             method: :post, disabled: (if story.likes[0] then story.likes[0].user_id == current_user.id end) %>
              </p>
            <% end %>

            <% if story.user == current_user %>
              <div class="btn-group">
                <%= link_to 'Edit', edit_story_path(story), class: 'label label-primary' %>
                <%= link_to 'Delete', story_path(story), data: {confirm: 'Are you sure?'}, method: :delete, class: 'label label-danger' %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'homepage' %>
<% end %>
