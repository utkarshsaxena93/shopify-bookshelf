<%= form_for @story do |f| %>
  <%= render 'shared/errors', obj: @story %>
  <div class="form-group">
    <%= f.label 'Name of the book:' %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Example: Man's Search for Meaning by Viktor Emil Frankl", required: true %>
  </div>

  <div class="form-group">
    <%= f.label 'Quote / Learning:' %>
    <%= f.text_area :body, class: 'form-control', placeholder: "Happiness cannot be pursued; it must ensue.", required: true, rows: 5 %>
  </div>

  <%= f.submit 'Share', class: 'btn btn-primary' %>
<% end %>
